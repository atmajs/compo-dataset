let Dialog {
	
	function show () {
		this.$.modal('show');
	}
	function hide () {
		this.$.modal('hide');
	}
	
	slot datasetEditorOpen () {
		this.show();
		return false;
	}
	
	slot datasetEditorClose () {
		this.hide();
		return false;
	}
	
	slot complete () {
		this.hide();
	}
	
	.modal.fade
		data-backdrop='@backdrop.attr.value'
		data-keyboard='@keyboard.attr.value'
		
	> .modal-dialog > .modal-content {
			.modal-header {
				@if (backdrop.attr.value !== 'static') {
					button.close data-dismiss= modal > span > 'x';
				}
				h4 .modal-title > @title;
			}
			@body > .modal-body style='position:relative; height:@attr.height' > @placeholder;
			.modal-footer {
				@footer;
			}
		}
}